---
import Layout from "../layouts/Layout.astro";

---

<Layout>


  <section class="contact">
    <h1>Contacto</h1>
    <p>Déjanos tus datos y nos pondremos en contacto contigo.</p>

    <form id="contactForm">
      <input
        type="text"
        name="Numero"
        placeholder="Teléfono (10 dígitos)"
        required
        pattern="[0-9]{10}"
      />

      <input
        type="email"
        name="correo"
        placeholder="Correo electrónico"
        required
      />

      <input
        type="text"
        name="Motivo"
        placeholder="Motivo (opcional)"
      />

      <button type="submit">Enviar</button>

      <div id="formMessage"></div>
    </form>
  </section>

  <script src="../services/Contacto.js"></script>


</Layout>

<style>
  .contact {
    max-width: 500px;
    margin: 80px auto;
    padding: 30px;
    font-family: "Ubuntu", sans-serif;
  }

  h1 {
    margin-bottom: 10px;
  }

  p {
    margin-bottom: 30px;
    color: #555;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  input {
    padding: 12px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  button {
    padding: 12px;
    background: #111;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
  }

  button:disabled {
    opacity: 0.6;
  }

  #formMessage {
    margin-top: 15px;
    font-size: 14px;
  }
</style>
